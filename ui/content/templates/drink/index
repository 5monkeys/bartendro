            {% endif %}

              <table class="dispense-buttons">
              <tr>
                <td class="dispense-buttons-left"><a class="btn btn-large btn-warning dispense-button" onclick="back()">Back</a></td>
                <td class="dispense-buttons-middle"><a class="btn btn-large btn-warning dispense-button" onclick="make_drink({{ drink.id}}, 1)">Taster</a></td>
                <td class="dispense-buttons-right"><a class="btn btn-large btn-warning dispense-button" onclick="make_drink({{ drink.id}}, 0)">Pour</a></td>
              </tr>
              </table>
