{% block body %}
<div class="drink-content">
  <div class="drink-heading">Make: {{ drink.name.name }}</div>
  <div class="row-fluid">
      <div class="span5">
          <div class="dispense-drink-detail">
             <div class="pour-desc">
                {{ drink.desc }}
             </div>
             <h3>ingredients:</h3>
             <div class="pour-ing">
                <table class="ing-table">
                  {% for ing in drink.ingredients %}
                      <tr>
                         <td id="booze_name{{ ing.id }}">{{ ing.name }}</td>
                         <td id="booze{{ ing.id }}" style="text-align: right"></td>
                         <td>fl oz</td>
                      </tr>
                  {% endfor %}
                </table>
             </div>
          </div>
      </div>
      <div class="span7">
          <div class="dispense-stack">
            {% if show_size %}
                <div class="dispense-stack-element">
                  <table>
                  <tr>
                     <td></td>
                     <td><div class="stack-element-title">size</div></td>
                     <td></td>
                  </tr>
                  <tr>
                     <td class="margin-td"> <a class="btn btn-large btn-warning drink-plus-minus" onclick="size_smaller()">-</a> </td>
                     <td class="main-td"><div class="adjust-middle" id="size-text">4 fluid ounces</div></td>
                     <td class="margin-td"><a class="btn btn-large btn-warning drink-plus-minus" onclick="size_bigger()">+</a> </td>
                  </tr>
                  <tr>
                     <td class="margin-td-label">smaller</td>
                     <td></td>
                     <td class="margin-td-label">bigger</td>
                  </tr>
                  </table>
                </div>
            {% endif %}

            {% if show_strength %}
                <div class="dispense-stack-element">
                  <table>
                  <tr>
                     <td></td>
                     <td><div class="stack-element-title">strength</div></td>
                     <td></td>
                  </tr>
                  <tr>
                     <td class="margin-td"> <a class="btn btn-large btn-warning drink-plus-minus" onclick="strength_weaker()">-</a> </td>
                     <td class="main-td"><div class="adjust-middle" id="strength-text">normal</div></td>
                     <td class="margin-td"><a class="btn btn-large btn-warning drink-plus-minus" onclick="strength_stronger()">+</a> </td>
                  </tr>
                  <tr>
                     <td class="margin-td-label">weaker</td>
                     <td></td>
                     <td class="margin-td-label">stronger</td>
                  </tr>
                  </table>
                </div>
            {% endif %}

            {% if show_sweet_tart %}
                <div class="dispense-stack-element">
                  <table>
                  <tr>
                     <td></td>
                     <td><div class="stack-element-title">sweet/tart</div></td>
                     <td></td>
                  </tr>
                  <tr>
                     <td class="margin-td"> <a class="btn btn-large btn-warning drink-plus-minus" onclick="tartness_sweeter()">-</a> </td>
                     <td class="main-td"><div class="adjust-middle" id="tartness-text">normal</div></td>
                     <td class="margin-td"><a class="btn btn-large btn-warning drink-plus-minus" onclick="tartness_tarter()">+</a> </td>
                  </tr>
                  <tr>
                     <td class="margin-td-label">sweeter</td>
                     <td></td>
                     <td class="margin-td-label">tarter</td>
                  </tr>
